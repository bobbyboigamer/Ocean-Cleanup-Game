{
    "compilerOptions": {
        "lib": ["ES2017", "DOM"],
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "strict": true,
        "checkJs": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        "downlevelIteration": true,
        "importHelpers": false,
        "paths": {
            "tslib": ["./node_modules/tslib/tslib.d.ts"]
        }
    },
    "include": ["src/*", "src/pages/*"]
}